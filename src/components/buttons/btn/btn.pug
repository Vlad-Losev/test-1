//- block: html
//- style: 'primary' | 'transparent-white' | 'transparent-primary'
mixin btn(style = 'primary')
    - var tag = attributes.href ? 'a' : 'button'

    #{tag}(class='um-btn um-btn--'+style class!=attributes.class onclick!=attributes.onclick disabled!=attributes.disabled href!=attributes.href)
        if block
            block
        else
            | Кнопка
